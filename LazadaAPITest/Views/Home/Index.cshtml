@model LazadaAPITest.Models.SearchTextRequest
@{
    ViewData["Title"] = "Search Product Page";
}

<div class="text-center">
<form method="post" asp-action="Search">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
            <h1 <b>Sendo Search Products</b></h1>
        <div class="col-8">
            <input asp-for="SearchText" class="form-control" />
            <span asp-validation-for="SearchText" class="text-danger"></span>
        </div>
        <div>
            <input type="submit" class="btn btn-info w-100" value="Search" />
        </div>
    </div>
</form>
</div>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }